<% if flash[:success] %>
  <div style="color: red;"><%= flash[:success] %></div>
<% end %>

<h2>管理者用映画一覧画面</h2>

<table>
  <thead>
    <tr>
      <th>映画のID</th>
      <th>タイトル</th>
      <th>公開年</th>
      <th>概要</th>
      <th>画像URL</th>
      <th>上映スケジュール</th>
      <th>上映中</th>
      <th>登録日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td><%= movie.name %></td>
      <td><%= movie.year %></td>
      <td><%= movie.description %></td>
      <!-- <td><%= link_to "画像", movie.image_url, target: "_blank" %></td> -->
      <td><img src="<%= movie.image_url %>" alt="<%= movie.name %>"></td>
      <!-- <% @schedules.each do |collection| %>
        <% collection.each do |schedule| %>
        <% if schedule.present? %>
        <td><%= schedule.start_time.year %></td>
        <% end %>
        <% end %>
      <% end %> -->
      <td>
        <% if movie.is_showing == true %>
        上映中
        <% else %>
        上映予定
        <% end %>
      </td>
      <td><%= movie.created_at %></td>
      <td><%= movie.updated_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
