<% if flash[:success] %>
  <div style="color: red;"><%= flash[:success] %></div>
<% end %>

<h2 class="text-2xl text-center mb-2">管理者用映画一覧画面</h2>

<table class="mt-4">
  <thead>
    <tr>
      <th>映画のID</th>
      <th>タイトル</th>
      <th>公開年</th>
      <th>概要</th>
      <th>画像URL</th>
      <th>上映スケジュール</th>
      <th>上映中</th>
      <th>登録日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><a href="<%= admin_movie_path(movie.id) %>"><%= movie.id %></a></td>
      <td><a href="<%= admin_movie_path(movie.id) %>"><%= movie.name %></a></td>
      <td><a href="<%= admin_movie_path(movie.id) %>"><%= movie.year %></a></td>
      <td><a href="<%= admin_movie_path(movie.id) %>"><%= movie.description %></a></td>
      <!-- <td><%= link_to "画像", movie.image_url, target: "_blank" %></td> -->
      <td><a href="<%= admin_movie_path(movie.id) %>"><img src="<%= movie.image_url %>" alt="<%= movie.name %>"></a></td>

      <td>
        <% if movie.is_showing == true %>
        <a href="<%= admin_movie_path(movie.id) %>">上映中</a>
        <% else %>
        <a href="<%= admin_movie_path(movie.id) %>">上映予定</a>
        <% end %>
      </td>
      <td><%= movie.created_at %></td>
      <td><%= movie.updated_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
