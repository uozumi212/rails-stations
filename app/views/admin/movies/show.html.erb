<h2>管理者映画詳細画面</h2>

<p>映画タイトル：<%= @movie.name %></p>
<% @schedules.each do |schedule| %>
<div>
  開始時間：<a href="<%= admin_schedule_path(schedule.id) %>"><%= schedule.start_time.strftime('%Y/%m/%d %H:%M') %></a>
</div>
<div>
  終了時間：<a href="<%= admin_schedule_path(schedule.id) %>"><%= schedule.end_time.strftime('%Y/%m/%d %H:%M') %></a>
</div>

<% end %>
<%= link_to 'スケジュール新規登録', new_admin_movie_schedule_path(@movie.id) %>
