<h2>スケジュール詳細画面</h2>

<p>開始年：<%= @schedule.start_time.strftime('%Y') %></p>
<%= form_for([:admin, @schedule]) do |f| %>

<%= f.label :start_time, "開始時間：" %>
<%= f.datetime_field :start_time %>

<%= f.label :end_time, "終了時間：" %>
<%= f.datetime_field :end_time %>

<%= f.submit "送信" %>

<% end %>

<%= button_to "削除", admin_schedule_path(@schedule), method: :delete, data: { turbo_confirm: "本当に削除しますか？"} %>
