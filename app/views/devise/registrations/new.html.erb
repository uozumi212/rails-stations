<% flash.each do |type, message| %>
  <div class="<%= type == 'error' ? 'bg-red-100 border-red-400 text-red-700' : 'bg-green-100 border-green-400 text-green-700' %> px-4 py-3 rounded relative mb-4 max-w-md mx-auto">
    <%= message %>
  </div>
<% end %>
<h2 class="text-center text-2xl mt-4">会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="text-center">
    <div class="field mt-4">
      <%= f.label :name, "名前" %><br>
      <%= f.text_field :name, autofocus: true, required: true %>
    </div>
    <div class="field mt-4">
      <%= f.label :email, "メールアドレス" %><br>
      <%= f.email_field :email, autocomplete: "email", required: true %>
    </div>
    <div class="field mt-4">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <% end %><br>
      <%= f.password_field :password, autocomplete: "new-password", required: true %>
    </div>
    <div class="field mt-4">
      <%= f.label :password_confirmation, "確認用パスワード" %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
    </div>
    <div class="actions bg-black text-white mt-4">
      <%= f.submit "会員登録" %>
    </div>
  </div>
<% end %>
<div class="text-center mt-4">
  <%= render "devise/shared/links" %>
</div>
