<% flash.each do |type, message| %>
  <div class="<%= type == 'error' ? 'bg-red-100 border-red-400 text-red-700' : 'bg-green-100 border-green-400 text-green-700' %> px-4 py-3 rounded relative mb-4 max-w-md mx-auto">
    <%= message %>
  </div>
<% end %>
<div class="container mx-auto max-w-md">
  <h2 class="text-center text-2xl mt-4">ログイン</h2>
  <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
    <div class="text-center mx-auto">
      <div class="field mt-4">
        <%= f.label :name, "名前", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, autofocus: true, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div class="field mt-4">
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autocomplete: "email", required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div class="field mt-4">
        <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="mt-4 text-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "ml-2 text-sm text-gray-900" %>
        </div>
      <% end %>
      <div class="actions bg-black text-white mt-4">
        <%= f.submit "ログイン" %>
      </div>
    </div>
  <% end %>
  <div class="form-links mx-auto mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
